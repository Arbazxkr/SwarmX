{
    "name": "swarmx",
    "version": "0.1.0",
    "description": "A model-agnostic, async, event-driven multi-agent orchestration framework",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
        "swarmx": "./dist/cli/main.js"
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsx watch src/cli/main.ts",
        "start": "node dist/cli/main.js",
        "test": "vitest run",
        "test:watch": "vitest",
        "lint": "eslint src/",
        "typecheck": "tsc --noEmit",
        "clean": "rm -rf dist",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "agents",
        "orchestration",
        "multi-agent",
        "async",
        "event-driven",
        "ai",
        "llm",
        "openai",
        "anthropic",
        "gemini",
        "grok"
    ],
    "license": "MIT",
    "author": "SwarmX Contributors",
    "engines": {
        "node": ">=20.0.0"
    },
    "dependencies": {
        "openai": "^4.70.0",
        "@anthropic-ai/sdk": "^0.30.0",
        "@google/genai": "^1.0.0",
        "commander": "^12.0.0",
        "chalk": "^5.3.0",
        "yaml": "^2.6.0",
        "cli-table3": "^0.6.5",
        "boxen": "^8.0.0",
        "ora": "^8.0.0",
        "eventemitter3": "^5.0.0",
        "zod": "^3.23.0",
        "dotenv": "^16.4.0"
    },
    "devDependencies": {
        "typescript": "^5.6.0",
        "tsx": "^4.19.0",
        "vitest": "^2.1.0",
        "@types/node": "^22.0.0",
        "eslint": "^9.0.0"
    }
}